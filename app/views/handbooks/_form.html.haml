.form
  = form_for @handbook, :html => { :multipart => true }  do |f|

    .field
      = f.label :your_email, :for => 'email'
      = f.text_field :email, 'data-extracts_cname_to' => 'handbook_name'
    .field
      = f.label :company_name, :for => 'handbook_name'
      = f.text_field :name
    .field
      = f.label :logo
      (optional)
      = f.file_field :logo

    -if @handbook.errors.any?
      .error#error_explanation
        -# %h2= "#{pluralize(@handbook.errors.count, "error")} prohibited this handbook from being saved:"
        %ul
          - @handbook.errors.full_messages.each do |msg|
            %li= msg

    .actions
      = f.submit 'Send me the .pdf', :class => 'generate'
